{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/page.tsx",
    "app/sub-page/page.tsx",
    ".next/types/**/*.ts",
    "api/controllers/AppController.ts",
    "api/services/AppService.ts"
  ],
  "exclude": ["node_modules"]
}
